<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name ="CountableSuite">
    <parameter name ="daoType" value="Mybatis"/><!--Choose daoType: Mybatis or Mysql-->

            <test name ="delete">
                <groups>
                    <run>
                        <include name="save before"/>
                    </run>
                </groups>
                <classes>
                    <class name="com.solvd.farm.dao.impl.CountableDAOTest">
                        <methods>
                            <include name="testDeleteCountable"/>
                        </methods>
                    </class>
                </classes>
            </test>

            <test name ="save">
                <groups>
                    <run>
                        <include name="delete after"/>
                    </run>
                </groups>
                <classes>
                    <class name="com.solvd.farm.dao.impl.CountableDAOTest">
                        <methods>
                            <include name="testSaveCountableSuccessAndIdInjection"/>
                        </methods>
                    </class>
                </classes>
            </test>

            <test name ="get and update">
                <groups>
                    <run>
                        <include name="save before"/>
                        <include name="delete after"/>
                    </run>
                </groups>
                <classes>
                    <class name="com.solvd.farm.dao.impl.CountableDAOTest">
                        <methods>
                            <include name="testGetCountableById"/>
                            <include name="testGetCountableList"/>
                            <include name="testUpdateCountable"/>
                        </methods>
                    </class>
                </classes>
            </test>


</suite>